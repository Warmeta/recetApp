<p id="notice"><%= notice %></p>

<% @recipes.in_groups_of(3, false).each do |group| %>
  <div class="row">
    <div class="three columns">
      <% group.each do |recipe| %>
        <div class="recipe">
          <h3 class="center"><%= recipe.title %></h3>
          <%= link_to (image_tag recipe.image.url, "class"=> "imagen_index"), recipe, "class" => "centerimg" %>

					<br/>
        </div>
      <% end %>
    </div>
  </div>
<% end %>

